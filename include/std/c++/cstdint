#pragma once

#ifdef __cplusplus
#define restrict __restrict__
extern "C" {
#endif

#include <stdint.h>

#ifdef __cplusplus
}
#undef restrict
#endif

namespace std {
    using ::int8_t;
    using ::uint8_t;
    using ::int16_t;
    using ::uint16_t;
    using ::int32_t;
    using ::uint32_t;
    using ::int64_t;
    using ::uint64_t;

    using ::int_least8_t;
    using ::uint_least8_t;
    using ::int_least16_t;
    using ::uint_least16_t;
    using ::int_least32_t;
    using ::uint_least32_t;
    using ::int_least64_t;
    using ::uint_least64_t;

    using ::int_fast8_t;
    using ::uint_fast8_t;
    using ::int_fast16_t;
    using ::uint_fast16_t;
    using ::int_fast32_t;
    using ::uint_fast32_t;
    using ::int_fast64_t;
    using ::uint_fast64_t;
}