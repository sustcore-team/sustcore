#pragma once

#include <type_traits>

namespace std {
    template <class T>
    constexpr void swap(T& a, T& b) {
        T temp = static_cast<T&&>(a);
        a      = static_cast<T&&>(b);
        b      = static_cast<T&&>(temp);
    }

    template <typename T>
    typename remove_reference<T>::type&& move(T&& t) {
        return __move(t);
    }

    template <typename T>
    T&& forward(typename remove_reference<T>::type& t) {
        return __forward(t);
    }

    template <typename T>
    T&& forward(typename remove_reference<T>::type&& t) {
        return __forward(t);
    }
}  // namespace std