#pragma once

#include <cstring>
#include <utility>

namespace std {

    template <typename T>
    struct less {
        constexpr bool operator()(const T &a, const T &b) const noexcept {
            return a < b;
        }
    };

    template <typename T>
    struct greater {
        constexpr bool operator()(const T &a, const T &b) const noexcept {
            return a > b;
        }
    };

    template <typename T>
    struct equal_to {
        constexpr bool operator()(const T &a, const T &b) const noexcept {
            return a == b;
        }
    };

    template <>
    struct equal_to<const char *> {
        constexpr bool operator()(const char *a, const char *b) const noexcept {
            return strcmp(a, b) == 0;
        }
    };
}  // namespace std