#pragma once

#ifdef __cplusplus
#define restrict __restrict__
extern "C" {
#endif

#include <uchar.h>

#ifdef __cplusplus
}
#undef restrict
#endif

#include <functional>

namespace std {
    using ::mbstate_t;

    template <>
    struct hash<char8_t> : public __trival_hash<char8_t> {};
    template <>
    struct hash<char16_t> : public __trival_hash<char16_t> {};
    template <>
    struct hash<char32_t> : public __trival_hash<char32_t> {};
}